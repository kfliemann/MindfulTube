{
    "manifest_version": 2,
    "name": "Tempname",
    "version": "1.0",

    "description": "Adds a temp description",

    "icons": {
        "48": "icons/tempname-48.png"
    },
    "permissions": ["cookies", "tabs"],
    "background": {
        "scripts": ["./js/background.js"]
    },
    "content_scripts": [
        {
            "matches": ["*://*.youtube.com/*", "*://*.youtube.de/*"],
            "css": ["./styles/styles.css"],
            "js": ["./js/tempname.js", "./js/buttonFactory.js"],
            "run_at": "document_start"
        }
    ],
    "browser_action": {
        "default_icon": {
            "64": "icons/hideshort-64.png"
        },
        "default_title": "Hide-Shorts",
        "default_popup": "./settings/extensionSettings.html"
    }
}
